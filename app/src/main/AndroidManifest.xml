<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inami.smf">

    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignIn"
            android:label="@string/title_activity_sign_in">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".personal.profile.EditProfile" />
        <activity android:name=".bbs.CreateThread" />
        <activity android:name=".bbs.ShowThread" />
        <activity android:name=".bbs.ReplyThread" />
        <activity android:name=".personal.groups.CreateGroup" />
        <activity android:name=".personal.groups.EditGroup" />
        <activity android:name=".personal.messages.CreateMessage" />
        <activity android:name=".personal.messages.ShowMessage"></activity>
    </application>

</manifest>